{
  "name": "enscope",
  "version": "1.0.0",
  "description": "Enterprise Scoping for ServiceNow Implementations",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --watch server/index.js",
    "dev:client": "cd client && npx vite --host",
    "build": "cd client && npx vite build",
    "start": "NODE_ENV=production node server/index.js",
    "db:init": "node server/db/init.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "puppeteer": "^23.9.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
